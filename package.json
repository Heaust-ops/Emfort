{
  "name": "emfort",
  "version": "1.0.0",
  "description": "an ecom parody",
  "main": "server.js",
  "engines": {
    "yarn": "1.22.4"
  },
  "scripts": {
    "client-install": "yarn --cwd client install",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "yarn --cwd client start",
    "dev": "concurrently \"yarn run server\" \"yarn run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false YARN_PRODUCTION=false yarn install && yarn --cwd client install && yarn --cwd client run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Heaust-ops/Emfort.git"
  },
  "author": "Heaust Azure",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Heaust-ops/Emfort/issues"
  },
  "homepage": "https://github.com/Heaust-ops/Emfort#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "concurrently": "^5.1.0",
    "config": "^3.3.1",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.3",
    "nodemailer": "^6.4.6"
  },
  "devDependencies": {
    "nodemon": "^2.0.2"
  }
}
